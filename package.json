{
  "name": "productivity-dashboard",
  "version": "1.0.0",
  "description": "Momentum Chrome Extension - Productivity Dashboard",
  "private": true,
  "workspaces": [
    "backend",
    "extension"
  ],
  "scripts": {
    "dev:backend": "cd backend && npm run dev",
    "dev:extension": "cd extension && npm run dev",
    "build:backend": "cd backend && npm run build",
    "build:extension": "cd extension && npm run build",
    "build": "npm run build:backend && npm run build:extension",
    "test:backend": "cd backend && npm test",
    "test:extension": "cd extension && npm test",
    "test:backend:coverage": "cd backend && npm run test:coverage",
    "test:extension:coverage": "cd extension && npm run test -- --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:all": "npm run test:backend && npm run test:extension && npm run test:e2e",
    "lint": "npm run lint --workspaces",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "typecheck": "cd backend && npm run typecheck && cd ../extension && npm run typecheck"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.0",
    "husky": "^8.0.3",
    "prettier": "^3.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
